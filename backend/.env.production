# =============================================================================
# GATEMATE - Production Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=production
PORT=5000

# Database (Use managed PostgreSQL in production)
DATABASE_URL=postgresql://gatemate:SECURE_PASSWORD@db.example.com:5432/gatemate_prod?sslmode=require

# Redis Cache (Use managed Redis)
REDIS_URL=redis://:SECURE_PASSWORD@redis.example.com:6379

# JWT Authentication (Generate strong secrets)
JWT_SECRET=YOUR_SUPER_SECURE_256_BIT_SECRET_KEY_HERE
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# MQTT Broker
MQTT_BROKER_URL=mqtt://mqtt.example.com:8883
MQTT_USERNAME=gatemate_prod
MQTT_PASSWORD=SECURE_MQTT_PASSWORD
MQTT_USE_TLS=true

# CORS (Update with your production domains)
CORS_ORIGIN=https://app.gatemate.io,https://gatemate.io

# Firebase
FIREBASE_PROJECT_ID=gatemate-dcacd
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@gatemate-dcacd.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# Email (SendGrid/SES)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
EMAIL_FROM=noreply@gatemate.io

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/gatemate.crt
SSL_KEY_PATH=/etc/ssl/private/gatemate.key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
