# =============================================================================
# GATEMATE - Production Environment Template
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------
# Server Configuration
# -----------------------------------
NODE_ENV=production
PORT=3000

# -----------------------------------
# Database (PostgreSQL)
# -----------------------------------
DATABASE_URL=postgresql://gatemate:CHANGE_THIS_PASSWORD@localhost:5432/gatemate

# -----------------------------------
# Redis Cache
# -----------------------------------
REDIS_URL=redis://:CHANGE_THIS_PASSWORD@localhost:6379

# -----------------------------------
# JWT Authentication
# -----------------------------------
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_64_CHAR_STRING
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# -----------------------------------
# MQTT Broker
# -----------------------------------
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# -----------------------------------
# CORS
# -----------------------------------
CORS_ORIGIN=https://gatemate.yourdomain.com

# -----------------------------------
# Logging
# -----------------------------------
LOG_LEVEL=info

# -----------------------------------
# Rate Limiting
# -----------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------
# Security
# -----------------------------------
BCRYPT_ROUNDS=12

# -----------------------------------
# Feature Flags
# -----------------------------------
ENABLE_MQTT=true
ENABLE_WEBSOCKET=true
ENABLE_REDIS=true
